<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bobmarley"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/imageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageDetail"
            android:layout_toRightOf="@+id/imageDetail"
            android:text="Bob Marley"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />

        <TextView
            android:id="@+id/imageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTitle"
            android:layout_toEndOf="@+id/imageDetail"
            android:text="phone Number 1"
            android:layout_toRightOf="@+id/imageDetail"
            tools:ignore="HardcodedText,RtlHardcoded" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>